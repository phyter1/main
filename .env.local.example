# AI Integration - OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# AI Rate Limiting (optional, defaults set in ai-config.ts)
# AI_MAX_REQUESTS_PER_MINUTE=10
# AI_MAX_TOKENS_PER_REQUEST=4096

# Admin Authentication
# WARNING: Change these defaults in production! Use strong, unique values.
# The admin password should be at least 16 characters with mixed case, numbers, and symbols.
ADMIN_PASSWORD=your_secure_password_here

# Admin session secret for encrypting session data
# Generate a random 64-character secret using: openssl rand -base64 48
# CRITICAL: Keep this secret safe and never commit the actual value to version control
ADMIN_SESSION_SECRET=random_64_char_secret_for_session_encryption

# Optional: Admin rate limiting (prevents brute force attacks)
# Defaults are conservative for security. Adjust based on your needs.
# ADMIN_MAX_REQUESTS_PER_MINUTE=5

# Next.js Configuration
# NEXT_PUBLIC_APP_URL=http://localhost:3000
